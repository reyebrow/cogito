
; Theme Info -----------------------------------------------------------------
; required information about the theme

name = Cogito
description = Cogito is the RE foundation theme and is based on Boron which is a base theme for Drupal 7 which converts the core template files to HTML5 markup.
core = 7.x
engine = phptemplate

; Stylesheets  ---------------------------------------------------------------
; We use [screen] instead of [all] to avoid browser styles affecting
; other media types. IE stylesheets are loaded through template.php

stylesheets[screen][] = css/globals.css
stylesheets[screen][] = css/typography.css
stylesheets[screen][] = css/grid.css
stylesheets[screen][] = css/ui.css
stylesheets[screen][] = css/forms.css
stylesheets[screen][] = css/orbit.css
stylesheets[screen][] = css/reveal.css
stylesheets[screen][] = css/app.css
stylesheets[screen][] = css/mobile.css
stylesheets[screen][] = style.css
stylesheets[all][] = system.css
stylesheets[all][] = system.theme.css

scripts[] = js/jquery.reveal.js
scripts[] = js/jquery.orbit-1.3.0.js
scripts[] = js/forms.jquery.js
scripts[] = js/jquery.customforms.js
scripts[] = js/jquery.placeholder.min.js
scripts[] = js/app.js
scripts[] = js/orbit-load.js



; Regions --------------------------------------------------------------------
; these content regions are available for block placement
; some are special hidden regions: page_top, page_bottom, and help

; these are the stock regions
regions[header] = Header
regions[footer] = Footer
regions[content] = Content
regions[highlighted] = Highlighted
regions[left_sidebar] = Left Sidebar
regions[right_sidebar] = Right Sidebar
regions[nav] = Navigation
regions[help] = Help

; Options --------------------------------------------------------------------
; these are the checkboxes that are available on the theme settings page.

; these are the stock options
features[] = logo
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = comment_user_verification
features[] = favicon

; Regional block aligns (h for horizontal, v for vertical)
settings[region][header]          = h
settings[region][footer]          = h
settings[region][content]         = v
settings[region][highlighted]     = v
settings[region][left_sidebar]    = v
settings[region][right_sidebar]   = v
settings[region][nav]             = h
settings[region][help]            = v

; additional theme settings
settings[breadcrumb_display]   = yes
settings[breadcrumb_separator] = ' â€º '
settings[breadcrumb_home]      = 1
settings[breadcrumb_trailing]  = 0
settings[breadcrumb_title]     = 0


; Region widths (rsb = right sidebar)
settings[3col_left] 	= 3
settings[3col_center]	= 6
settings[3col_right]	= 3

settings[2col_rsb_right] 	= 3
settings[2col_rsb_center] 	= 9
settings[2col_lsb_left] 	= 3
settings[2col_lsb_center] 	= 9